{% extends 'base.html.twig' %}

{% block body %}

<div class="container">
    <div class="row">
        <div class="col my-4">
            <h1>Bienvenue Ã  1001 Plates</h1>
        </div>
    </div>

    <div class="d-flex flex-wrap justify-content-center">
        {% for foodType in foodTypes %}
        {% if app.request.get('name') is same as(foodType.name) %}
            <p class="btn-second-active px-3">{{ foodType.name }}</p>
            {% else %}
                <a href="{{ path('app_food_type', {name: foodType.name}) }}" class="text-decoration-none"><p class="btn-second px-3">{{ foodType.name }}</p></a>
            {% endif %}
        {% endfor %}
    </div>

     <div class="row">
                <div class="col-5">
                {% if cityName is not defined %}
                    {{ form_start(formCityName) }}
                    <div class="col col-md-8">
                        <div class="col-10">
                            {{ form_row(formCityName.city) }}  
                        </div>
                        <div class="btn-first">
                            {{ form_widget(formCityName.Valider) }}
                        </div>
                    </div>
                    {{ form_end(formCityName) }}
                {% endif %}
                </div>
            </div>

    <hr>
    <div class="d-flex justify-content-center gap-1">

    {% for restaurant in restaurants %}

        {% include 'restaurant/restaurantCard.html.twig' with { restaurant: restaurant } %}

    {% endfor %}

    </div>


</div>

{% endblock %}

