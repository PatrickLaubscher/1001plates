{% extends 'base.html.twig' %}

{% block title %}Renouvellement du mot de passe{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <div class="container">
        <h1 class="mt-3 mb-5">Renouvellement de votre mot de passe</h1>

        <div class="row d-flex justify-content-center">        
            <div class="col-6">
                {{ form_start(requestForm) }}
                {{ form_row(requestForm.email) }}
                <div class="mb-3 text-center">
                    <small>
                        Renseigner votre adresse email, nous allons vous envoyer un lien pour renouveler votre mot de passe.
                    </small>
                </div>
                <div class="d-flex justify-content-center">
                    <button class="btn btn-primary col-6">Envoyer un mail pour changer de mot de passe</button>
                </div>
                {{ form_end(requestForm) }}
            </div>
        </div>

    </div>


{% endblock %}
